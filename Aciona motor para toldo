#define RELE
int LDR; //variavel para a leitura do ldr
int cont; //variavel utilizada para armazenar os valores lidos ldr
int i; //variavel para contagem
void setup() {
  pinMode(RELE,OUTPUT); //DEFINA O PINO D8com saida
  Serial.begin(9600); //inicia a serial na velocidade 9600bps
}
void loop() {
  LDR=0; //zera a variavel ldr
  for(i=0;i<=50;i++) //faz 50vezes a leitura do sensor
{
  cont=analogRead(A0); //le o valor do sensor (ldr ligado ao pino
                   //A0) e guarda na variavel lido+
  LDR = LDR+cont; //armazenamento na variavel LDR o valor lido+
                  //o valor anterior
  delay(100);     //delay de 100 milissegundos
}
LDR=LDR/50; //divide o valor armazenado por 10
Serial.println(LDR); //imprime o valor do ldr

(LDR >= 400): ? (digitalWrite(RELE,HIGH)) : (digitalWrite(RELE,LOW));
}


//Se o valor lido (luminosidade) for maior ou igual a 400, liga o
//relé, senão desliga o relé
//Este projeto foi pensado em um acionamendo de um relé para  
//comandar um motor supostamente colocado para movimentação de 
// um toldo em uma porta de loja por exemplo, acionando o motor
// quando o sol estiver batendo naquele local e abaixando o toldo. 

  
